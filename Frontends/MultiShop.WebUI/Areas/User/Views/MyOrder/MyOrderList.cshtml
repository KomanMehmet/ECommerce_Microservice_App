@model List<ResultOrderingByUserIdDto>


@{
    ViewData["Title"] = "MyOrderList";
    Layout = "~/Areas/User/Views/UserLayout/Index.cshtml";
    int count = 0;
    int colorCount = 5;
}

<style>
    .row-color-1 {
        background-color: #f8f9fa;
    }
    /* açık gri */
    .row-color-2 {
        background-color: #e0f7fa;
    }
    /* açık mavi */
    .row-color-3 {
        background-color: #f1f8e9;
    }
    /* açık yeşil */
    .row-color-4 {
        background-color: #fff3e0;
    }
    /* açık turuncu */
    .row-color-5 {
        background-color: #fce4ec;
    }
    /* pastel mor */

    .table-hover tbody tr:hover {
        background-color: #ececec !important;
        transition: background-color 0.3s ease;
        cursor: pointer;
    }

    .order-icon {
        margin-right: 5px;
        color: #ffc107; /* uyumlu sarı */
    }

    .btn-warning {
        font-size: 0.85rem;
        padding: 5px 10px;
    }
</style>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Sipariş Geçmişim</h4>
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Toplam Fiyat</th>
                                        <th>Sipariş Tarihi</th>
                                        <th>Sipariş Detayları</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        var renkSinifi = $"row-color-{(count % colorCount == 0 ? colorCount : count % colorCount)}";
                                        <tr class="@renkSinifi">
                                            <td>@count</td>
                                            <td>
                                                <i class="fas fa-money-bill-wave order-icon"></i>
                                                @item.TotalPrice ₺
                                            </td>
                                            <td>
                                                <i class="fas fa-calendar-alt order-icon"></i>
                                                @(((DateTime)item.OrderDate).ToString("dd-MMM-yyyy"))
                                            </td>
                                            <td>
                                                <a href="#" class="btn btn-warning">
                                                    <i class="fas fa-info-circle"></i> Detaylar
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                    
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
</div>

